// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../db"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  name      String
  age       Int
  gender    String?
  courses   Course[]
}

model Course {
  id          Int       @id @default(autoincrement())
  name        String
  classroom   String
  capacity    Int
  teacher     String
  description String?
  active      Boolean   @default(false)
  students    Student[]
}